        </dd>

        <dt class = "col-sm-2">
            Hãng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.theLoaiSanPhams.Select(x=>x.theLoai.TenTheLoai))
        </dd>*@
