@model _1_API.ViewModel.KhachHang.CreateKhachHang

@{
    ViewData["Title"] = "DangKy";
}

<div class="main">
        <div class="main">
            <div class="container">
                <form name="formLogin" method="get" asp-controller="Login" asp-action="CheckDangKy">
                    <div class="login" style="text-align : center">
                        <div class="login-title"><h1>Đăng ký</h1></div>
                        <div class="mb-3 row">
                            <div class="col-sm-2"></div>
                        <label asp-for="Ten" class="col-sm-2 col-form-label">Họ và tên</label>
                            <div class="col-sm-5">
                        <input asp-for="Ten" class="form-control" />
                        <span asp-validation-for="Ten" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <div class="col-sm-2"></div>
                        <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
                            <div class="col-sm-5">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <div class="col-sm-2"></div>
                        <label asp-for="MatKhau" class="col-sm-2 col-form-label">Mật khẩu</label>
                            <div class="col-sm-5">
                        <input asp-for="MatKhau" class="form-control" />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <div class="col-sm-2"></div>
                        <label asp-for="DiaChi" class="col-sm-2 col-form-label">Địa chỉ</label>
                            <div class="col-sm-5">
                        <input asp-for="DiaChi" class="form-control" />
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <div class="col-sm-2"></div>
                            <label asp-for="GioiTinh" class="col-sm-2 col-form-label">Giới tính</label>
                            <div class="col-sm-5">
                        <select asp-for="GioiTinh" class="form-select">
                            <option value="true" selected>Nam</option>
                            <option value="false">Nữ</option>
                        </select>
                        <span asp-validation-for="GioiTinh" class="text-danger"></span>
                            </div>
                            
                        </div>
                        <div class="mb-3 row">
                            <div class="col-sm-2"></div>
                        <label asp-for="Sdt" class="col-sm-2 col-form-label">Số điện thoại</label>
                            <div class="col-sm-5">
                        <input asp-for="Sdt" class="form-control" />
                        <span asp-validation-for="Sdt" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <div class="col-sm-2"></div>
                        <label asp-for="NgaySinh" class="col-sm-2 col-form-label">Ngày sinh</label>
                            <div class="col-sm-5">
                        <input asp-for="NgaySinh" type="date" class="form-control" />
                        <span asp-validation-for="NgaySinh" class="text-danger"></span>
                            </div>
                        </div>
                        @*@if (thongbao != null)
                        {
                            <div style="text-align: center; color:red">@thongbao</div>
                        }*@
                        <button type="submit" class="btn btn-primary">
                            Đăng Ký
                        </button>
                        <div class="dangNhap">
                            <a asp-controller="Login" asp-action="DangNhap">Bạn đã có tài khoản? Đăng nhập</a>
                        </div>
                        <div class="quenMK">
                            <a asp-controller="Login" asp-action="QuenMK">Bạn quên mật khẩu ?</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>

