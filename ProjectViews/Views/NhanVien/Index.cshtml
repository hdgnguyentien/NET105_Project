@model IEnumerable<_1_API.ViewModel.NhanVien.ViewNhanVien>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh Sách Nhân Viên</h1>

<p>
    <a asp-action="CreateNhanVien">Thêm Nhân Viên</a>
</p>
<table class="table table-striped table-bordered table-hover align-middle" style="text-align:center">
    <thead>
        <tr class="table-info">
            <th >
                Ảnh
            </th>
            <th>
                Mã
            </th>
            <th>
                Tên
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Chức vụ
            </th>
            <th>
                Email
            </th>
            <th>
                Trạng thái
            </th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
            <td>
                    <img src="@("~/AnhNhanVien/"+item.AnhNhanVien)" alt="@item.AnhNhanVien" asp-append-version="true" width="120px" height="140px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaNV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sdt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChucVu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { Id = item.Id },
                new { onclick = "return confirm('Bạn có muốn xóa không?');" }),
            </td>
        </tr>
}
    </tbody>
</table>
