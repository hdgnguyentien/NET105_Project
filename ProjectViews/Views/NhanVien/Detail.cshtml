@model _1_API.ViewModel.NhanVien.ViewNhanVien

@{
    ViewData["Title"] = "Detail";
    var image = ViewData["Image"] as string;
    var Id = ViewData["Id"] as string;
}

<h1>Chi Tiết Nhân Viên</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <img src="@("~/AnhNhanVien/"+ image)" alt="image" asp-append-version="true" width="150px" height="150px" />
    </div>
    <div class="col-md-6"></div>
    
</div>
<div class="row mt-3">
    <dl class="row">
        <dt class="col-sm-2">
            Mã nhân viên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaNV)
        </dd>
        <dt class="col-sm-2">
            Họ và tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ten)
        </dd>
        <dt class="col-sm-2">
            Giới tính
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>
        <dt class="col-sm-2">
            Ngày sinh
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
        <dt class="col-sm-2">
            Số điện thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sdt)
        </dd>
        <dt class="col-sm-2">
            Chức vụ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChucVu)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Mật khẩu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MatKhau)
        </dd>
        
        <dt class="col-sm-2">
            Địa chỉ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
        <dt class="col-sm-2">
            Người gửi báo cáo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NguoiGuiBC)
        </dd>
        <dt class="col-sm-2">
            Trạng thái
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrangThai)
        </dd>
        
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
