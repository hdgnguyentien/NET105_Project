@using Data.ModelsClass
@model IEnumerable<_1_API.ViewModel.SanPham.ViewSanPham>

@{
    ViewData["Title"] = "Index";
    var lstHang = ViewData["ListHang"] as List<Hang>;
}

<h1>Danh Sách Sản Phẩm</h1>

<p>
    <a asp-action="Create">Thêm Sản Phẩm</a>
</p>

<div class="row mb-3">
    <div class="col-md-6"></div>
    <div class="col-md-6">
        <form class="row g-3 float-end" method="get" asp-controller="SanPham" asp-action="Search">
            <div class="col-auto">
                <input class="form-control" name="ten" type="text" placeholder="Nhập tên nhân viên" />
            </div>
            <div class="col-auto">
                <select class="form-select" name="idHang">
                    <option value="">Tất cả</option>
                    @foreach (var item in lstHang)
                    {
                        <option value="@item.Id">@item.TenHang</option>
                    }
                </select>
            </div>
            <div class="col-auto">
                <button class="btn btn-primary" type="submit">Tìm Kiếm</button>
            </div>
        </form>

    </div>
</div>


<table class="table table-striped table-bordered table-hover align-middle" style="text-align:center">
    <thead>
        <tr class="table-info">
            <th>
                Hãng
            </th>
            <th>
                Tên
            </th>
            <th>
                Trạng thái
            </th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenHang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrangThai)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Cập nhật</a> |
                    <a asp-controller="SanPhamChiTiet" asp-action="Index" asp-route-id="@item.Id.ToString()">Chi Tiết Sản Phẩm</a>
                    @*@Html.ActionLink("Xóa", "Delete", new { id=item.Id })*@
                </td>
            </tr>
        }
    </tbody>
</table>
